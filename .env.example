############################################
# General
############################################

# Environment name (development / staging / production)
ENV=development

# Project name (used for logging, tagging, etc.)
PROJECT_NAME=data-platform


############################################
# Database (Postgres)
############################################

POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=app
POSTGRES_USER=app
POSTGRES_PASSWORD=app

# Full database URL (commonly used by Django / SQLAlchemy)
DATABASE_URL=postgres://app:app@db:5432/app


############################################
# Backend (Django)
############################################

# Django settings
DJANGO_SETTINGS_MODULE=config.settings
DJANGO_SECRET_KEY=change-me-in-production
DJANGO_DEBUG=true

# Allowed hosts (comma-separated)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend

# CORS (for Vite dev server)
CORS_ALLOW_ALL_ORIGINS=true
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Backend server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Optional: Django superuser (for local dev automation)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin


############################################
# Frontend (Vite)
############################################

# Port Vite dev server runs on
FRONTEND_PORT=5173

# Public API URL exposed to the browser
VITE_API_URL=http://localhost:8000

# Optional: App metadata
VITE_APP_NAME=Data Platform
VITE_APP_ENV=development


############################################
# Logging & Observability (optional)
############################################

LOG_LEVEL=debug

# Example placeholders for future use
# SENTRY_DSN=
# OTEL_EXPORTER_OTLP_ENDPOINT=


############################################
# Data / Storage (optional)
############################################

# Where data files are stored (inside container)
DATA_DIR=/data

# Example cloud storage vars (disabled by default)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=
# S3_BUCKET_NAME=
